<% layout("layouts/boilerplate") -%>
<div class="row" >
    <div class="col-8 offset-2">
    <h3 style="margin-top: 20px;"><b>Listing Details:</b></h3>
    </div>
      <div class="col-6 offset-3 show-card" 
      style= " align-items: center; justify-content: center;">
  <img src="<%=listing.image%>" 
   style="height: 20rem; width: 35rem; border-radius:110px 110px 110px 110px;"
  class="card-show-img"
   alt="listing_image">

  <div class="card-body" style="margin-left: 150px; margin-top: 10px;">
    <p class="card-text" style="font-size: 1.5rem;"><b><%= listing.title %></b></p>
    <p class="card-text"><%= listing.description %></p>
    <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
    <p class="card-text"><%= listing.location %></p>
    <p class="card-text"><%= listing.country %></p><br/>
  </div>
  </div>
  <div class="btns">
    <a href="/listings/<%=listing._id %>/edit"
       style="margin-left: 420px; display: flex; margin-bottom: 20px;"
        class="btn btn-danger">Edit</a>
    <form method="POST" 
    action="/listings/<%=listing._id %>?_method=DELETE">

      <input
       type="hidden" 
       name="_method"
        value="DELETE"/>
        
      <button
       type="submit"
        class="btn btn-dark col-5 offset-2"
         style="margin-left: 100px; margin-bottom: 20px;display: flex;">Delete</button>
    </form>
    <br />
    </div>
    </div>