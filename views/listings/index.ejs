<% layout("/layouts/boilerplate") -%>
<h3> All Listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 g-4">
<%for(let listing of allListings) { %>
<div class="card" >
  <img src="listing.image" class="card-img-top" alt="listing image" style="height: 20rem;">
  <div class="card-body">
    <p class="card-text"><b><%= listing.title %></b> </p>
    <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %>/night </p>
    <a href="/listings/<%= listing._id %>" class="btn btn-primary">View Listing</a>
  </div>
</div>
<% } %>
</div>
