<% layout("layouts/boilerplate") -%>
  <div class="row mt-3" >
    <div class="col-8 offset-2">
      <br/>
    <h3><b>Create a New Listing:</b></h3><br/>
    <form method="POST" action="/listings/" novalidate class="needs-validation">

      <div> 
        <label for="title" class="form-label">Title</label>
      <br />
      <input name="listing[title]" 
      placeholder="Add a catchy title.." 
      type="text" 
      class="form-control"
       required/>
      <div class="valid-feedback">
      Looks good!
    </div>
      </div>
      
      <div class="md-3">
        <label for="description" class="form-label">Description</label>
      <textarea
        name="listing[description]"
        placeholder="Enter Description"
        class="form-control"
        required
      ></textarea>
      </div>

      <div class="md-3">
        <label for="image" class="form-label"> Image link</label>
      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
      </div>

      <div class="row">
      <div class="md-3 col-md-4">
        <label for="price" class="form-label">Price</label>
      <input name="listing[price]" 
      placeholder="15000" 
      type="number" 
      class="form-control"
      required
       />
       <div class="invalid-feedback">
      Please provide a valid price!!!
    </div>
      </div> 

      <div class="md-3 col-md-8">
        <label for="country" class="form-label">Country</label>
      <input name="listing[country]" 
      placeholder="India" 
      type="text" 
      class="form-control"
      required
       />
       <div class="valid-feedback">
      Looks good!
    </div><div class="invalid-feedback">
      Please enter valid country name!!!.
    </div>
      </div> 
      </div>

      <div class="md-3">
        <label for="location" class="form-label">Location</label>
      <input
        name="listing[location]"
        placeholder="Massouri, Uttarakhand"
        type="text"
        class="form-control"
        required
      />
      <div class="valid-feedback">
      Looks good!
    </div>
      <div class="invalid-feedback">
      Please enter valid location!!!
    </div>
      <br/>
      </div>
      <button class="btn btn-danger mt-3">Add</button>
      <br/><br/>
    </form>
    </div>

  </div>